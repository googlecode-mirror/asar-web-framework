#!/usr/bin/env php
<?php
ini_set('error_reporting', E_ALL | E_STRICT);

$lib_path = realpath(dirname(__FILE__) . '/../lib/') . '/';
require_once $lib_path . 'SplClassLoader.php';
$classLoader = new SplClassLoader('Asar', $lib_path . 'asar');
$classLoader->register();

if (!isset($_SESSION)) {
  $_SESSION = array();
}
$scope = new \Asar\EnvironmentScope(
  $_SERVER, $_GET, $_POST, $_FILES, $_SESSION, $_COOKIE, $_ENV, getcwd(), $argv
);
\Asar\Injector::injectEnvironmentHelperBootstrap($scope)->run();
\Asar\Injector::injectEnvironmentHelperCli($scope)->run();
?>

